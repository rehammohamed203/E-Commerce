<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.ECommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>

    </style>

    <style name="Theme.ECommerce" parent="Base.Theme.ECommerce" />

    <style name="OutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="hintTextColor">@color/darkGray</item>
        <item name="boxStrokeColor">@color/white</item>


    </style>

    <style name="InputText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:background">@drawable/edit_text_back</item>
    </style>

</resources>